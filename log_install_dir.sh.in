if [ -z "$FILE_LIST" ]; then
  echo "error - FILE_LIST shell variable not set"
  exit 1
fi

# TODO - check argument number

for file in `@TAR@ cf - $1 | @TAR@ t`; do
  echo "$2/$file" >> $FILE_LIST;
done

